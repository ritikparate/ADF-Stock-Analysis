{
	"name": "SilverTransformation",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					},
					"name": "HistoryData"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					},
					"name": "HistorySink"
				}
			],
			"transformations": [
				{
					"name": "RoundingValues"
				},
				{
					"name": "AddCols"
				},
				{
					"name": "SortingByDate"
				},
				{
					"name": "AddPriceCols"
				},
				{
					"name": "SevenDaysAvg"
				},
				{
					"name": "AddingHourMIns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Date as timestamp,",
				"          Open as double,",
				"          High as double,",
				"          Low as double,",
				"          Close as double,",
				"          Volume as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     fileSystem: 'silver',",
				"     folderPath: 'historical-data',",
				"     fileName: 'data_ae94f806-aeb8-4d0a-a81d-22beeaabb7d1_dcf9dbbc-4f29-4fa9-a651-afeb3b931f87.parquet') ~> HistoryData",
				"AddingHourMIns derive(Open = round(Open, 2),",
				"          High = round(High, 2),",
				"          Low = round(Low, 2),",
				"          Close = round(Close, 2)) ~> RoundingValues",
				"RoundingValues derive(data_load_timestamp = currentTimestamp(),",
				"          data_source = 'yfinance',",
				"          is_valid = iif((isNull(Open) || isNull(Close) || isNull(High) || isNull(Low) || High < Low), false(), true()),",
				"          Date = toDate(Day)) ~> AddCols",
				"AddCols sort(asc(Date, true)) ~> SortingByDate",
				"SevenDaysAvg derive({DayReturn%} = round((Close-Open) / Open*100,2),",
				"          PriceChange = round(Close-Open,2),",
				"          PriceRange = round(High-Low,2),",
				"          AveragePrice = round((High + Low + Close) / 3,2)) ~> AddPriceCols",
				"SortingByDate window(asc(Date, true),",
				"     startRowOffset: -6L,",
				"     endRowOffset: 0L,",
				"     Avg7Days = round(avg(Close),2),",
				"     rangeSpecified: true) ~> SevenDaysAvg",
				"HistoryData derive(Day = dayOfMonth(Date),",
				"          Month = month(Date),",
				"          Hour = hour(Date)) ~> AddingHourMIns",
				"AddPriceCols sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'finalsink',",
				"     folderPath: 'historical-data',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> HistorySink"
			]
		}
	}
}