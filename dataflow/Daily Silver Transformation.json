				},
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					},
					"name": "TeslaSink",
					"description": "Sink for Gold Analysis"
				},
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					},
					"name": "AppleSink"
				},
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					},
					"name": "ModernaSink"
				},
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					},
					"name": "NvidiaSink"
				},
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage1",
						"type": "LinkedServiceReference"
					},
					"name": "OrientalSink"
				}
			],
			"transformations": [
				{
					"name": "RoundingValues"
				},
				{
					"name": "AddCols"
				},
				{
					"name": "SortingByDate"
				},
				{
					"name": "AddPriceCols"
				},
				{
					"name": "AddingHourMIns"
				},
				{
					"name": "UnionAll"
				},
				{
					"name": "ModernaStockName"
				},
				{
					"name": "NvidiaStockName"
				},
				{
					"name": "OrientalStockName"
				},
				{
					"name": "TeslaStockName"
				},
				{
					"name": "AppleStockName"
				},
				{
					"name": "AggregateForAnalysis"
				},
				{
					"name": "Apple"
				},
				{
					"name": "AppleAgg"
				},
				{
					"name": "Moderna"
				},
				{
					"name": "ModernaAgg"
				},
				{
					"name": "Nvidia"
				},
				{
					"name": "NvidiaAgg"
				},
				{
					"name": "Oriental"
				},
				{
					"name": "OrientalAgg"
				},
				{
					"name": "Tesla"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Datetime as timestamp,",
				"          Open as double,",
				"          High as double,",
				"          Low as double,",
				"          Close as double,",
				"          Volume as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     fileSystem: 'silver',",
				"     folderPath: 'todays-data/Apple') ~> AppleDaily",
				"source(output(",
				"          Datetime as timestamp,",
				"          Open as double,",
				"          High as double,",
				"          Low as double,",
				"          Close as double,",
				"          Volume as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     fileSystem: 'silver',",
				"     folderPath: 'todays-data/Moderna') ~> ModernDaily",
				"source(output(",
				"          Datetime as timestamp,",
				"          Open as double,",
				"          High as double,",
				"          Low as double,",
				"          Close as double,",
				"          Volume as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     fileSystem: 'silver',",
				"     folderPath: 'todays-data/Nvidia') ~> NvidiaDaily",
				"source(output(",
				"          Datetime as timestamp,",
				"          Open as double,",
				"          High as double,",
				"          Low as double,",
				"          Close as double,",
				"          Volume as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     fileSystem: 'silver',",
				"     folderPath: 'todays-data/Oriental') ~> OrientalDaily",
				"source(output(",
				"          Datetime as timestamp,",
				"          Open as double,",
				"          High as double,",
				"          Low as double,",
				"          Close as double,",
				"          Volume as long",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     fileSystem: 'silver',",
				"     folderPath: 'todays-data/Tesla') ~> TeslaDaily",
				"AddingHourMIns derive(Open = round(Open, 2),",
				"          High = round(High, 2),",
				"          Low = round(Low, 2),",
				"          Close = round(Close, 2)) ~> RoundingValues",
				"RoundingValues derive(data_load_timestamp = currentTimestamp(),",
				"          data_source = 'yfinance',",
				"          is_valid = iif((isNull(Open) || isNull(Close) || isNull(High) || isNull(Low) || High < Low), false(), true())) ~> AddCols",
				"AddCols sort(asc(Datetime, true)) ~> SortingByDate",
				"SortingByDate derive({DayReturn%} = round((Close-Open) / Open*100,2),",
				"          PriceChange = round(Close-Open,2),",
				"          PriceRange = round(High-Low,2),",
				"          AveragePrice = round((High + Low + Close) / 3,2)) ~> AddPriceCols",
				"UnionAll derive(Day = dayOfMonth(Datetime),",
				"          Month = month(Datetime),",
				"          Hour = hour(Datetime)) ~> AddingHourMIns",
				"AppleStockName, ModernaStockName, NvidiaStockName, OrientalStockName, TeslaStockName union(byName: true)~> UnionAll",
				"ModernDaily derive(Stock = 'Moderna') ~> ModernaStockName",
				"NvidiaDaily derive(Stock = 'Nvidia') ~> NvidiaStockName",
				"OrientalDaily derive(Stock = 'Oriental') ~> OrientalStockName",
				"TeslaDaily derive(Stock = 'Tesla') ~> TeslaStockName",
				"AppleDaily derive(Stock = 'Apple') ~> AppleStockName",
				"Tesla aggregate(groupBy(Stock,",
				"          Datetime),",
				"     DailyOpen = first(Open),",
				"          DailyClose = last(Close),",
				"          DailyHigh = max(High),",
				"          DailyLow = min(Low),",
				"          TotalVolume = sum(Volume),",
				"          TradingMinutes = count(Datetime)) ~> AggregateForAnalysis",
				"AddPriceCols filter(Stock == 'Apple') ~> Apple",
				"Apple aggregate(groupBy(Datetime,",
				"          Stock),",
				"     DailyOpen = first(Open),",
				"          DailyClose = last(Close),",
				"          DailyHigh = max(High),",
				"          DailyLow = min(Low),",
				"          TotalVolume = sum(Volume),",
				"          TradingMinutes = count(Datetime)) ~> AppleAgg",
				"AddPriceCols filter(Stock=='Moderna') ~> Moderna",
				"Moderna aggregate(groupBy(Datetime),",
				"     DailyOpen = first(Open),",
				"          DailyClose = last(Close),",
				"          DailyHigh = max(High),",
				"          DailyLow = min(Low),",
				"          TotalVolume = sum(Volume),",
				"          TotalMinutes = count(Datetime)) ~> ModernaAgg",
				"AddPriceCols filter(Stock == 'Nvidia') ~> Nvidia",
				"Nvidia aggregate(groupBy(Stock,",
				"          Datetime),",
				"     DailyOpen = first(Open),",
				"          DailyClose = last(Close),",
				"          DailyHigh = max(High),",
				"          DailyLow = min(Low),",
				"          TotalVolume = sum(Volume),",
				"          TradedMinutes = count(Datetime)) ~> NvidiaAgg",
				"AddPriceCols filter(Stock == 'Oriental') ~> Oriental",
				"Oriental aggregate(groupBy(Stock,",
				"          Datetime),",
				"     DailyOpen = first(Open),",
				"          DailyClose = last(Close),",
				"          DailyHigh = max(High),",
				"          DailyLow = min(Low),",
				"          TotalVolume = sum(Volume),",
				"          TradedMinutes = count(Datetime)) ~> OrientalAgg",
				"AddPriceCols filter(Stock == 'Tesla') ~> Tesla",
				"AddPriceCols sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'finalsink',",
				"     folderPath: 'daily-data',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     outputAssertFailedRows: true,",
				"     partitionBy('hash', 1)) ~> DailySink",
				"AggregateForAnalysis sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'gold',",
				"     folderPath: 'daily-data/Tesla',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> TeslaSink",
				"AppleAgg sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'gold',",
				"     folderPath: 'daily-data/Apple',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> AppleSink",
				"ModernaAgg sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'gold',",
				"     folderPath: 'daily-data/Moderna',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> ModernaSink",
				"NvidiaAgg sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'gold',",
				"     folderPath: 'daily-data/Nvidia',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> NvidiaSink",
				"OrientalAgg sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delimited',",
				"     fileSystem: 'gold',",
				"     folderPath: 'daily-data/Oriental',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> OrientalSink"
			]
		}
	}
}